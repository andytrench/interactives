{
"version": 2,
"builds": [
{
"src": "server.js",
"use": "@vercel/node"
},
{
"src": "public/**/*",
"use": "@vercel/static"
},
{
"src": "public/js/**/*",
"use": "@vercel/static",
"config": {
"zeroConfig": true
}
}
],
"routes": [
{
"src": "/settings/(.*)",
"dest": "/public/settings/$1",
"headers": {
"cache-control": "no-cache, no-store, must-revalidate",
"pragma": "no-cache",
"expires": "0"
}
},
{
"src": "/js/(.*)",
"dest": "/public/js/$1"
},
{
"src": "/api/(.*)",
"dest": "server.js"
},
{
"src": "/(.*)",
"dest": "/public/$1"
}
],
"env": {
"NODE_ENV": "production"
}
}